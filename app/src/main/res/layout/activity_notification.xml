<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NotificationActivity"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="16dp" />

            <!-- Notifications Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <Switch
                android:id="@+id/switchChats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chats Notifications" />

            <Switch
                android:id="@+id/switchGroups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Groups Notifications" />

            <Switch
                android:id="@+id/switchContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contacts Notifications" />

            <!-- Dark Mode -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appearance"
                android:textStyle="bold"
                android:paddingTop="16dp" />

            <Switch
                android:id="@+id/switchDarkMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Dark Mode" />

            <!-- Manage Account -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textStyle="bold"
                android:paddingTop="16dp" />

            <Button
                android:id="@+id/btnUpdatePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Phone Number" />

            <Button
                android:id="@+id/btnUpdateEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Email" />

            <Button
                android:id="@+id/btnUpdatePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Password" />

            <!-- Sync Contacts -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacts"
                android:textStyle="bold"
                android:paddingTop="16dp" />

            <Button
                android:id="@+id/btnSyncContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sync Contacts" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
